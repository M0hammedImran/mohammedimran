{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["node_modules/**/*", "dist/**/*", "coverage/**/*", "docs/**/*", "test/**/*", ".vercel/**/*"]
	},
	"formatter": {
		"lineWidth": 120,
		"ignore": ["node_modules/**/*", "dist/**/*", "coverage/**/*", "docs/**/*", "test/**/*", ".vercel/**/*"]
	}
}
