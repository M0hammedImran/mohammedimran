---
import Github from './icons/Github.astro';
import LogoSquare from './icons/LogoSquare.astro';
import MohammedImran from './icons/MohammedImran.astro';
---

<header
    class='header-divider sticky top-0 z-20 h-20 items-center bg-zinc-50 transition-colors dark:bg-zinc-900'
>
    <div
        class='mx-auto w-full max-w-6xl px-3 py-4 sm:px-6 md:px-6 lg:px-8 flex items-center justify-between text-center text-xl font-bold md:text-left'
    >
        <div class='flex flex-row items-center gap-2'>
            <LogoSquare class='w-6' title='' />

            <MohammedImran
                class='h-10 w-40 text-zinc-900 transition-colors dark:text-zinc-50'
                title='Mohammed Imran'
            />
        </div>

        <a
            aria-label="Author's Github Page"
            href={'https://github.com/m0hammedimran'}
            class='w-8 rounded p-1 transition-colors hover:text-zinc-700'
            target={'_blank'}
        >
            <Github title='Github' class='w-full' />
        </a>
    </div>
</header>
